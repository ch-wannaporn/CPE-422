<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="youtube image"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/topic_id_text"
            style="@style/course_id_style" />

        <TextView
            android:id="@+id/topic_name_text"
            style="@style/course_name_style" />


        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToLearn"/>

        <Button
            android:id="@+id/topic_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ToQuiz" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>